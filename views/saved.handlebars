<div class="container">
    <h1 class="text-center">Saved NYT Articles...</h1>

    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card panel">

                <div class="row">
                    <div class="col-sm-12 col-lg-6 pr-lg-0">
                        <img src="{{this.img}}" style="width: 100%;">
                    </div>
                    <div class="col-sm-12 col-lg-6 pl-lg-0">
                        <div class="card-header text-white">
                            <h4>{{this.title}}</h4>
                        </div>
                        <div class="card-body">
                            <p> {{this.summary}}</p>
                            <a href={{this.link}} target="_blank">{{this.link}}</a>
                            <br><br>
                            <a href="/saved">
                            <button type="button" class="btn btn-info delete" data-id={{this._id}}>Delete Article</button>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
            {{/each}}
        {{else}}
        <div class="card panel">
            <div class="card-header">
            </div>
            <div class="card-body">
                <p class="text-center">Uh Oh. Looks like we don't have any saved articles...</p>
            </div>
        </div>
        {{/if}}
    </div>
</div>