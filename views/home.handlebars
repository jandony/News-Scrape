<div class="container">
    <h1 class="text-center">New York Times Mongo Scraper</h1>

    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card panel">
                <div class="card-header">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="card-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-info save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card panel">
            <div class="card-body">
            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>